{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build recent",
      "type": "shell",
      "command": "Build/build-recent",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "remakefw",
      "type": "shell",
      "command": "cd Build && build.bat /t:remakefw",
      "linux": {
        "command": "cd Build && ./build /t:remakefw"
      },
      "group": "build",
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "remakefw + test",
      "type": "shell",
      "command": "cd Build && build.bat /t:remakefw /p:Action=Test",
      "linux": {
        "command": "cd Build && ./build /t:remakefw /p:Action=Test"
      }
    }
  ]
}