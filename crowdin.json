{
  "project_identifier": "fieldworks",
  "api_key_env": "CROWDIN_API_KEY",
  "base_path": ".",
  "files": [
    {
      "source": "/DistFiles/Language Explorer/Configuration/strings-en.xml",
      "translation": "/%locale%/strings-%locale%.xml",
      "content_segmentation": 0,
      "translatable_elements": [
        "//group/string[@txt]"
      ]
    },
    {
      "source": "/DistFiles/Language Explorer/Configuration/**/*.xml",
      "translation": "/%locale%/%original_path%/%file_name%.%locale%.%file_extension%"
      "ignore": [ "/DistFiles/Language Explorer/Configuration/strings-*.xml" ],
      "content_segmentation": 0,
      "translatable_elements": [
        "//[@label and not @translate='do not translate']"
      ]
    },
    {
      "source": "/DistFiles/Language Explorer/DefaultConfigurations/**/*.fwdictconfig",
      "translation": "/%locale%/%original_path%/%file_name%.%locale%.%file_extension%"
      "content_segmentation": 0,
      "translatable_elements": [
        "/DictionaryConfiguration[@name]",
		"/ConfigurationItem[@name]"
      ]
    },
    {
      "source": "Src/**/*.resx",
      "translation": "/%locale%/%original_path%/%file_name%.%locale%.%file_extension%",
	  "ignore": [
        "Src/**/*Tests/**/*"
      ]
    },
    {
      "source": "Localizations/lists/*.xlf",
      "translation": "/%locale%/Lists/%file_name%.%locale%.%file_extension%"
    },
    {
      "source": "Localizations/LCM/**/*.resx",
      "translation": "/%locale%/%original_path%/%file_name%.%locale%.%file_extension%"
    }
  ]
}