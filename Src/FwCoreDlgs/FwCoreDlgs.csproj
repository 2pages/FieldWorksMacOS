<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>SIL.FieldWorks.FwCoreDlgs</RootNamespace>
    <Description>FwCoreDlgs</Description>
    <NoWarn>1701;1702;169;649;414;219</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DialogAdapters.Gtk2" Version="0.1.11" />
    <PackageReference Include="Encoding-Converters-Core" Version="0.5.1" />
    <PackageReference Include="GitVersion.MsBuild" Version="5.10.3" PrivateAssets="All" />
    <PackageReference Include="SIL.Windows.Forms.WritingSystems" Version="11.0.0-beta0041" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RootSite\RootSite.csproj" />
    <ProjectReference Include="..\ScriptureUtils\ScriptureUtils.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="ECInterfaces" Condition="'$(OS)'=='Unix'">
      <SpecificVersion>False</SpecificVersion>
      <HintPath>$(installation_prefix)/lib/fieldworks/ECInterfaces.dll</HintPath>
    </Reference>
    <Reference Include="SilEncConverters40" Condition="'$(OS)'=='Unix'">
      <SpecificVersion>False</SpecificVersion>
      <HintPath>$(installation_prefix)/lib/fieldworks/SilEncConverters40.dll</HintPath>
    </Reference>
    <Reference Include="System.Design" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="AddConverterDlgStrings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>AddConverterDlgStrings.resx</DependentUpon>
    </Compile>
    <Compile Update="AddConverterResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>AddConverterResources.resx</DependentUpon>
    </Compile>
    <Compile Update="FwCoreDlgs.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>FwCoreDlgs.resx</DependentUpon>
    </Compile>
    <Compile Update="FWCoreDlgsErrors.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>FWCoreDlgsErrors.resx</DependentUpon>
    </Compile>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
    <Compile Update="Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="AddConverterDlgStrings.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>AddConverterDlgStrings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="AddConverterResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>AddConverterResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="FwCoreDlgs.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>FwCoreDlgs.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="FWCoreDlgsErrors.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>FWCoreDlgsErrors.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Strings.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
</Project>