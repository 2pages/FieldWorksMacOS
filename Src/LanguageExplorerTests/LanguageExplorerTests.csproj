<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>LanguageExplorerTests</RootNamespace>
    <Description>LanguageExplorerTests</Description>
    <NoWarn>649</NoWarn>
    <!--<AppConfig>..\AppForTests.config</AppConfig>-->
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Controls\XMLViews\Resources\TextCacheModel_LanguageExplorer.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Encoding-Converters-Core" Version="0.0.8" />
    <PackageReference Include="GitVersion.MsBuild" Version="5.10.3" PrivateAssets="All" />
    <PackageReference Include="Moq" Version="4.18.2" />
    <PackageReference Include="SIL.LCModel.Core.Tests" Version="10.2.0-beta0068" />
    <PackageReference Include="SIL.LCModel.Tests" Version="10.2.0-beta0068" />
    <PackageReference Include="SIL.LCModel.Utils.Tests" Version="10.2.0-beta0068" />
    <PackageReference Include="SIL.TestUtilities" Version="11.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\LanguageExplorer.TestUtilities\LanguageExplorer.TestUtilities.csproj" />
    <ProjectReference Include="..\LanguageExplorer\LanguageExplorer.csproj" />
    <ProjectReference Include="..\RootSite.TestUtilities\RootSite.TestUtilities.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="ECInterfaces" Condition="'$(OS)'=='Unix'">
      <HintPath>/usr/lib/fieldworks/ECInterfaces.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="SilEncConverters40" Condition="'$(OS)'=='Unix'">
      <HintPath>/usr/lib/fieldworks/SilEncConverters40.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Controls\XMLViews\XmlViewsResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>XmlViewsResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="LanguageExplorerTestsResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>LanguageExplorerTestsResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\AssemblyInfoForTests.cs">
      <Link>AssemblyInfoForTests.cs</Link>
    </Compile>
    <None Update="Impls\SilSidePane\whitepixel.bmp" CopyToOutputDirectory="Always" Link="%(Filename)%(Extension)" />
    <None Update="Impls\SilSidePane\DefaultIcon.ico" CopyToOutputDirectory="Always" Link="%(Filename)%(Extension)" />
    <Content Include="Controls\XMLViews\Resources\TextCacheModel_LanguageExplorer.xml" CopyToOutputDirectory="Always" Link="%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Controls\XMLViews\XmlViewsResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>XmlViewsResources.resx</DependentUpon>
    </Compile>
    <Compile Update="LanguageExplorerTestsResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>LanguageExplorerTestsResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>