<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>SIL.FieldWorks.Common.RootSites</RootNamespace>
    <Description>RootSiteTests</Description>
    <AppConfig>..\AppForTests.config</AppConfig>
    <NoWarn>649</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GitVersion.MsBuild" Version="5.10.3" PrivateAssets="All" />
    <PackageReference Include="SIL.LCModel.Core.Tests" Version="10.2.0-beta0068" />
    <PackageReference Include="SIL.LCModel.Tests" Version="10.2.0-beta0068" />
    <PackageReference Include="SIL.LCModel.Utils.Tests" Version="10.2.0-beta0068" />
    <PackageReference Include="SIL.TestUtilities" Version="11.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FieldWorks.TestUtilities\FieldWorks.TestUtilities.csproj" />
    <ProjectReference Include="..\FwUtilsTests\FwUtilsTests.csproj" />
    <ProjectReference Include="..\LanguageExplorer.TestUtilities\LanguageExplorer.TestUtilities.csproj" />
    <ProjectReference Include="..\RootSite.TestUtilities\RootSite.TestUtilities.csproj" />
    <ProjectReference Include="..\RootSite\RootSite.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\AssemblyInfoForTests.cs">
      <Link>AssemblyInfoForTests.cs</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\RootSiteTestsResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>RootSiteTestsResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\RootSiteTestsResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>RootSiteTestsResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="TextCacheModel.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>