<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>SILUBS.ScriptureChecks</RootNamespace>
    <Description>Scripture Checks</Description>
    <NoWarn>1701;1702;168</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GitVersion.MsBuild" Version="5.10.3" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FwUtils\FwUtils.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="CopyToEditorialChecks" AfterTargets="Build">
    <ItemGroup>
      <ScrChecksFiles Include="$(TargetPath)" />
      <ScrChecksFiles Include="$(TargetDir)$(TargetName).pdb" Condition="Exists('$(TargetDir)$(TargetName).pdb')" />
      <ScrChecksFiles Include="$(TargetPath).mdb" Condition="Exists('$(TargetPath).mdb')" />
    </ItemGroup>
    <MakeDir Directories="..\..\DistFiles\Editorial Checks" />
    <Copy SourceFiles="@(ScrChecksFiles)" DestinationFolder="..\..\DistFiles\Editorial Checks" OverwriteReadOnlyFiles="true" />
  </Target>

  <Target Name="CleanInEditorialChecks" AfterTargets="Clean">
    <ItemGroup>
      <ScrChecksCopied Include="..\..\DistFiles\Editorial Checks\$(TargetName).dll" />
      <ScrChecksCopied Include="..\..\DistFiles\Editorial Checks\$(TargetName).pdb" Condition="Exists('..\..\DistFiles\Editorial Checks\$(TargetName).pdb')" />
      <ScrChecksCopied Include="..\..\DistFiles\Editorial Checks\$(TargetName).dll.mdb" Condition="Exists('..\..\DistFiles\Editorial Checks\$(TargetName).dll.mdb')" />
    </ItemGroup>
    <Delete Files="@(ScrChecksCopied)" ContinueOnError="true" />
  </Target>
</Project>