<?xml version="1.0" encoding="UTF-8"?>
<root>
	<tools>
		<tool label="Feature Types" value="featureTypesAdvancedEdit" icon="SideBySideView">
			<control>
				<dynamicloaderinfo assemblyPath="LanguageExplorer.dll" class="LanguageExplorer.Areas.MultiPane"/>
				<parameters area="lists" id="FeatureTypesAndDetailMultiPane" splitterBarOrientation="vertical" firstLabel="Browse" secondLabel="Details">
					<!--this will fill the pane on the left-->
					<control>
						<dynamicloaderinfo assemblyPath="LanguageExplorer.dll" class="LanguageExplorer.Controls.PaneBarContainer"/>
						<parameters id="featureTypesList" collapse="144000">
							<control>
								<dynamicloaderinfo assemblyPath="xWorks.dll" class="SIL.FieldWorks.XWorks.RecordBrowseView"/>
								<parameters area="lists" id="featureTypesList" clerk="featureTypes" filterBar="true" treeBarAvailability="NotAllowed"
									defaultCursor="Arrow" hscroll="true" altTitleId="FsFeatStrucType-Plural" editable="false">
									<columns>
										<!-- explicit layout of these columns (rather than having a layout attribute) causes display problems in Mono/Linux -->
										<column label="Name" ws="$ws=best analysis" width="50%" field="Name" layout="Name"/>
										<column label="Abbreviation" width="50%" ws="$ws=best analysis" field="Abbreviation" layout="Abbreviation"/>
									</columns>
								</parameters>
							</control>
						</parameters>
					</control>
					<!--this will fill the pane on the right-->
					<control>
						<dynamicloaderinfo assemblyPath="LanguageExplorer.dll" class="LanguageExplorer.Controls.PaneBarContainer"/>
						<parameters PaneBarGroupId="PaneBar-ShowHiddenFields-featureTypesAdvancedEdit" collapse="144000">
							<control>
								<dynamicloaderinfo assemblyPath="xWorks.dll" class="SIL.FieldWorks.XWorks.RecordEditView"/>
								<parameters area="lists" clerk="featureTypes" treeBarAvailability="NotAllowed" filterPath="Language Explorer\Configuration\Grammar\Edit\DataEntryFilters\basicPlusFilter.xml" persistContext="advancedEdit" layout="Edit" emptyTitleId="No-FsFeatStrucTypes"/>
							</control>
						</parameters>
					</control>
				</parameters>
			</control>
		</tool>
	</tools>
</root>
