<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RootNamespace>NUnitReport</RootNamespace>
    <Description>Generate a report of passed and failed unit tests</Description>
    <Product>NUnitReport</Product>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GitVersion.MsBuild" Version="5.6.9" PrivateAssets="All" />
    <PackageReference Include="SIL.FwBuildTasks.Lib" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.Build.Framework" />
    <Reference Include="Microsoft.Build.Tasks.v4.0" />
    <Reference Include="Microsoft.Build.Utilities.v4.0" />
  </ItemGroup>

  <Target Name="CopyOutputToBuild" AfterTargets="CoreBuild">
    <ItemGroup>
      <FilesToCopy Include="$(OutputPath)/**/*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(FilesToCopy)" DestinationFolder="../.." />
  </Target>
</Project>